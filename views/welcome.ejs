<!DOCTYPE html>
<html>

<head>
    <title>Welcome</title>
</head>

<body>
    <h3>Meus posts:</h3>
    <% myPosts.forEach(function(post) { %>
        <p>ID: <%= post.id %>
        </p>
        <p>Username: <%= post.username %>
        </p>
        <p>Content: <%= post.content %>
        </p>
        <p>Created At: <%= post.createdAt %>
        </p>
        <p>Updated At: <%= post.updatedAt %></p>
        <a href="/editPost/<%= post.id %>">Edit</a>
        <p>Updated At: <%= post.updatedAt %></p>
        <button onclick="deletePost('<%= post.id %>')">Delete</button>
        <% }); %>

        <h3>Todos os posts:</h3>
        <% posts.forEach(function(post) { %>
        <p>ID do usu√°rio que criou: <%= post.userId %>
        </p>
        <p>Usernome: <%= post.usernome %>
        </p>
        <p>Content: <%= post.content %>
        </p>
        <img src="https://github.com/<%= post.avatar %>.png" alt="">
        <hr>
        <% }); %>

        <script>
            function deletePost(id) {
                if (confirm('Are you sure?')) {
                    fetch('/deletePost/' + id, { method: 'DELETE' })
                    .then(res => {
                        console.log(res, 'res');
                        if (res) {
                            window.location.reload();
                        } else {
                            alert('Error deleting post');
                        }
                    });
                }
            }
        </script>
</body>

</html>