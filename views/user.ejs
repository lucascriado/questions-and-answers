                    // => @media (min-width: 1280px and max-width: 1535px) { ... }

                    '2xl': { 'min': '1536px' },
                    // => @media (min-width: 1536px) { ... }
                },
                extend: {
                    fontFamily: {
                        manrope: ['Manrope'],
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-black text-white font-manrope">
    <div class="container mx-auto w-[1440px]">
